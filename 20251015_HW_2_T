using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _20251015_HW_2_T_
{
    class Program
    {
        /*
         * Text RPG
         * 턴제인데 player HP가 0이 될때까지만 싸우세요
         * 1. 플레이어의 체력을 선언하거나 플레이어를 생성한다 -> 플레이어 이름도 받아보자
         * 2. 플레이어와 싸울 몬스터를 만들거나 생성한다
         * 3. 둘을 싸우게 하는데 방식은? 턴제로 돌아가도록 한다
         * 4. 이 게임의 종료조건은? 플레이어의 체력이 0이 되면 종료한다
         *    -> 몬스터의 체력이 0이 되면 새로 만든다
         */

        public static int pATk(string playerName, string monsterName, int monsterHP)
        {
            Random rnd = new Random();

            int playerATK = rnd.Next() % 11;

            monsterHP -= playerATK;

            if (monsterHP < 0)
            {
                monsterHP = 0;
            }

            Console.ReadLine();

            Console.WriteLine($"{playerName} 용사 공격 [{playerATK}]의 피해! -> {monsterName}의 HP : {monsterHP}");

            Console.ReadLine();

            return monsterHP;

        }

        public static int mATk(string playerName, int playerHP, string monsterName, int monsterHP, int killMC)
        {
            int monsterATK = 8;

            if (monsterHP > 0)
            {
                Console.WriteLine($"{monsterName}이 공격 합니다! 몸통박치기[{monsterATK}]의 피해!");
                playerHP -= monsterATK;
            }

            if (playerHP <= 0)
            {
                playerHP = 0;
                Console.WriteLine($"{playerName}님이 죽었습니다...ㅜㅜ");
                Console.WriteLine($"죽인 {monsterName}의 수 : {killMC}");
            }
            else
            {
                Console.WriteLine($"{playerName} HP : {playerHP}");
            }

            return playerHP;
        }

        public static int monsterRe(string playerName, String monsterName, int monsterHP)
        {
            Console.WriteLine($"{playerName} 용사님 새로운 {monsterName}을 만났습니다! (Enter를 치면 공격합니다)");
            monsterHP = 10;
            Console.ReadLine();
            return monsterHP;
        }


        static void Main(string[] args)
        {
            Console.WriteLine("이 세계에 오신 것을 환영합니다.");
            Console.Write("플레이어의 이름을 입력하세요 : ");

            //플레이어 정보
            string playerName = Console.ReadLine();
            int playerHP = 100;
            int killMC = 0;

            //몬스터 정보
            string monsterName = "주황버섯";
            int monsterHP = 10;

            Console.WriteLine($"{playerName} 용사님!! {monsterName}을 만났습니다! (Enter를 치면 공격합니다)");

            while (playerHP > 0)
            {
                if (monsterHP <= 0)
                {
                    monsterHP = monsterRe(playerName, monsterName, monsterHP);
                    killMC++;
                }
                //Console.WriteLine($"{playerName} 용사님 새로운 {monsterName}을 만났습니다! (Enter를 치면 공격합니다)");
                //monsterHP = 10;
                //Console.ReadLine();

                monsterHP = pATk(playerName, monsterName, monsterHP);
                //Random rnd = new Random();
                //playerATK = rnd.Next() % 11;
                //
                //monsterHP -= playerATK;
                //
                //if (monsterHP < 0)
                //{
                //    monsterHP = 0;
                //}
                //Console.WriteLine($"{playerName} 용사 공격 [{playerATK}]의 피해! -> {monsterName}의 HP : {monsterHP}");
                //Console.ReadLine();

                playerHP = mATk(playerName, playerHP, monsterName, monsterHP, killMC);
                //if(monsterHP > 0)
                //{
                //    Console.WriteLine($"{monsterName}이 공격 합니다! 몸통박치기[{monsterATK}]의 피해!");
                //    playerHP -= monsterATK;
                //}
                //
                //if(playerHP <= 0)
                //{
                //    playerHP = 0;
                //    Console.WriteLine($"{playerName}님이 죽었습니다...ㅜㅜ");
                //    Console.WriteLine($"죽인 {monsterName}의 수 : {killMC}");
                //}
                //else
                //{
                //    Console.WriteLine($"{playerName} HP : {playerHP}");
                //}
            }
        }
    }
}
